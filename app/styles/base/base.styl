body
	color #000
	font-family 'Roboto', sans-serif
	background-color #f0f0f0
	cursor default

.post
	text-align center
	&__text
		text-align left
		margin-top 10px
		color #000
		font-weight 400
		font-size 14px
		line-height 1.3
		text-indent 20px

		&_strong
			text-align center
			text-transform uppercase
			font-weight 600

		&_indent
			margin-top 30px

	&__img
		margin 20px

.gm-info
	margin-top 20px
	margin-left 10px
