.actuals
	displat table

	&__item
		margin 11px 0
		padding-bottom 7px
		padding-top 12px
		background-color #f6f6f6

		&:hover
			background-color #7caaba

	&__text
		display table-cell
		padding-left 10px
		padding-right 20px

	&__number
		padding-left 12px
		display table-cell
		font-weight bold

	&__author
		padding-right 20px
		margin-top 10px
		text-align right
		font-style italic
